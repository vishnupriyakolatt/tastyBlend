<section class="h-100 gradient-custom">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-10 col-xl-8">
          <div class="card" style="border-radius: 10px;">
            <div class="card-header px-4 py-5">
              <h3 class="text-muted mb-0">Thanks for your Order <span style="color:black;"></span>!</h3>
            </div>
            <div class="card-body p-4">
              <div class="d-flex justify-content-between align-items-center mb-4">
                <p class="lead fw-normal mb-0" style="color: #a8729a;"></p>
                <p class="small text-muted mb-0"></p>
              </div>
              <div class="card shadow-0 border mb-4">
                <div class="card-body">
                    <% productData.forEach((order)=>{ %>
                  <div class="row">
                    <div class="col-md-2">
                      <img src="/image/<%= order.productDetail.image[0].filename %>"
                        class="img-fluid" alt="Phone">
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <h5 class="text-muted mb-0"style="color:black;">  <%= order.productDetail.name %></h5>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <h5 class="text-muted mb-0 small" style="color:black;font-size:14px;"> <%= order.productDetail.category %></h5>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                        <h5 class="text-muted mb-0 small" style="color:black;font-size:14px;"> <%= order.order_placed_on %></h5>
                      </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <h5 class="text-muted mb-0 small"style="color:black;font-size:14px;">Qty:<%= order.productQuantity%></h5>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <h5 class="text-muted mb-0 small" style="color:black;font-size:14px;"> â‚¹<%=order.totalAmount%></h5>
                    </div>
                  </div>
                 
                  <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                  <div class="row d-flex align-items-center">
                    <div class="col-md-2">
                      <h3 class="text-muted mb-0 small"style="color:black;font-size:14px;">Track Order</h3>
                    </div>
                   
                    <div class="col-md-10">
                    <%if(order.orderStatus=="pending"){%>
                      <div class="progress" style="height: 6px; border-radius: 16px;">
                        <div class="progress-bar" role="progressbar"
                          style="width:0; border-radius: 16px; background-color:dark green;" aria-valuenow="25"
                          aria-valuemin="0" aria-valuemax="0"></div>
                          
                      </div>
                      <%}else if(order.orderStatus=="shipped"){%>
                     
                      <div class="progress" style="height: 6px; border-radius: 16px;">
                        <div class="progress-bar" role="progressbar"
                          style="width: 35%; border-radius: 16px; background-color:dark green;" aria-valuenow="35"
                          aria-valuemin="0" aria-valuemax="35"></div>
                      </div>
                      <%}else if(order.orderStatus=="Delivered"){%>
                      <div class="progress" style="height: 6px; border-radius: 16px;">
                        <div class="progress-bar" role="progressbar"
                          style="width: 100%; border-radius: 16px; background-color:dark green;" aria-valuenow="65"
                          aria-valuemin="0" aria-valuemax="100"></div>
                      </div>
                      <%}%>
                      <div class="d-flex justify-content-around mb-1">
                        <h5
                        class="text-muted mt-1 mb-0 small ms-xl-5"style="color:black;font-size:14px;">Pending</h5>
                        <h5
                         class="text-muted mt-1 mb-0 small ms-xl-5"style="color:black;font-size:14px;">Shipped</h5>
                        <h5 class="text-muted mt-1 mb-0 small ms-xl-5"style="color:black;font-size:14px;">Delivered</h5>
                      </div>
                    </div>
                  </div>
                </div>
                <% }) %>
              </div>
             
          
  
            
