<% if(wishlistData.length===0){ %>
  <center class="col-xl-12 col-md-6 col-sm-4 pt-5">
    <h1 style="color: red">Sorry your wishlist is empty</h1>
    <img class="image-fluid col-xl-12 col-md-6 col-sm-4 mt-5"
      src="https://alphapharmaexhibitions.com/images/cartempty1.png" alt="" style="width: 14rem" /><br />
    <a class="btn btn-succes" href="/" style="margin-top: 17px; color: green; border: solid green">SHOP NOW</a>
  </center>
  <% }else{ %>
    <section style="background-color: white;height: 100vh;">
      <div class="container  ">
        <div class="row d-flex justify-content-center align-items-center ">
          <div class="col-10">
            
            
              <div class="card rounded-3 mb-4 mt-5 p-5">
                <div class="d-flex justify-content-between align-items-center mb-5">
                  <h1 class="fw-bold mb-0 text-black">Wishlist</h1>
                  <h6 class="mb-0 text-muted"><%= wishCount %> items</h6>
                </div>
                <div >
                  <h6 class="mb-0"><a href="/" style="text-decoration: none;" class="text-body "><i
                        class="fas fa-long-arrow-alt-left me-2"></i>Back to shop</a></h6>
                </div>
                <hr class="my-4">
                <% wishlistData.forEach((wishlist)=>{ %>
                <div class="card-body " >
                  <div class="row d-flex justify-content-between align-items-center">
                    <div class="col-md-2 col-lg-2 col-xl-2">
                      <img src="/image/<%= wishlist.productDetail.image[0].filename %>" class="img-fluid rounded-3"
                        alt="Cotton T-shirt" />
                    </div>
                    <div class="col-md-3 col-lg-3 col-xl-3 d-flex justify-content-center my-2">
                      <p class="lead fw-normal mb-2">
                        <%= wishlist.productDetail.name %>
                      </p>
                    </div>
                    <div class="col-md-3 col-lg-3 col-xl-2 d-flex justify-content-center my-2">
                      <h5 class="mb-0">Rs.<%= wishlist.productDetail.price %>
                      </h5>
                    </div>
                    <div class="col-md-3 col-lg-2 col-xl-2 d-flex justify-content-center my-2">
                      <button class="btn btn-outline-none"
                        onclick="removeWishlistProduct('<%= wishlist._id %>','<%= wishlist.productDetail._id %>')">
                        <i class="fas fa-trash fa-lg"></i>
                      </button>
                    </div>
                    <div class="col-md-1 col-lg-1 col-xl-1 d-flex justify-content-center my-2" style="width: 12rem">
                      <button class="btn btn-outline-dark"
                        onclick="addToCartWish('<%= wishlist.productDetail._id %>')">
                        Add to Cart
                      </button>
                      <p id="exist" class="text-danger"></p>
                      
                    </div>
                    <hr>
                  </div>
                </div>
                
                <% }) %>
              </div>
             
          </div>
        </div>
      </div>
    </section>
    <% } %>
   

