<div class = "card-wrapper">
  <div class = "card"style="border:none;background-color:#f7f7f7;" >
   
    <div class = "product-imgs">
      <div class = "img-display">
        <div class = "img-showcase">
          <img src = "/image/<%=product?.image[0]?.filename%>" id="MainImage" alt = "bridal image">
         
        </div>
      </div>
      <div class = "img-select">
        <div class = "img-item">
          <a href = "#" data-id = "1">
            <img src = "/image/<%=product?.image[0]?.filename%>" alt = "bridal image">
          </a>
        </div>
        <div class = "img-item">
          <a href = "#" data-id = "2">
            <img src = "/image/<%=product?.image[1]?.filename%>" alt = "bridal image">
          </a>
        </div>
        <div class = "img-item">
          <a href = "#" data-id = "3">
            <img src = "/image/<%=product?.image[2]?.filename%>"  alt = "bridal image">
          </a>
        </div>
       
      </div>
    </div>
    <!-- card right -->
    <div class = "product-content">
      <h2 class = "product-title"><%=product.name%></h2>
     
      

      <div class = "product-price">
        <p class = "last-price">MRP: <span><%=product.price%></span></p>
        <p class = "new-price">Price: <span>$<%=product.price-((product.price)*5)/100%> (5% off)</span></p>
      </div>

      <div class = "product-detail">
        <h2>about this item: </h2>
        <p><%=product.details%></p>
      
        <ul>
          <li>Available: <span>in stock</span></li>
          <li>Category: <span></span><%=product.category%></li>
          <li>Shipping Area: <span>All over the world</span></li>
          <li>Shipping Fee: <span>$20</span></li>
        </ul>
      </div>

      
        <div class = "purchase-info">
          <span class="text-danger" id="<%= product._id %>"></span>
<button class="btn btn-dark" onclick="addToCart('<%= product._id %>')">Add to cart</button>
<button id="wishButton" class="btn btn-outline-none" onclick="addToWishlist('<%= product._id %>')">Add to wishlist</button>

</div>

      </div>

      
    </div>
