<div style="margin-top: 80px;;">
<% if(cart.length===0){ %>
  <center class="col-xl-12 col-md-6 col-sm-4 pt-5">
    <h1 style="color: red">Sorry your cart is empty</h1>
    <img
      class="image-fluid col-xl-12 col-md-6 col-sm-4 mt-5"
      src="https://alphapharmaexhibitions.com/images/cartempty1.png"
      alt=""
      style="width: 14rem"
    /><br />
    <a
      class="btn btn-primary"
      href="/"
      style="margin-top: 17px; color:white; border: solid green"
      >SHOP NOW</a
    >
  </center>
  <% }else{ %>
  </div>
<section class=" ">
  <div class="container py-5 ">
    <div class="row d-flex justify-content-center align-items-center ">
      <div class="col-12">
        <div class="card card-registration card-registration-2" style="border-radius: 15px; ">
          <div class="card-body p-0">
            <div class="row g-0">
              <div class="col-lg-8">
                <div class="p-5">
                  <div class="d-flex justify-content-between align-items-center mb-5">
                    <h1 class="fw-bold mb-0 text-black">Shopping Cart</h1>
                    <h3 class="mb-0 text-muted"><%= count %> items</h3>
                  </div>
                  <div >
                    <h2 class="mb-0"><a href="/" style="text-decoration: none;" class="text-body "><i
                          class="fas fa-long-arrow-alt-left me-2"></i>Back to shop</a></h2>
                  </div>
                  <hr class="my-4">
                  <% cart.forEach((product)=>{ %>
                  <div class="row mb-4 d-flex justify-content-between align-items-center">
                    <div class="col-md-2 col-lg-2 col-xl-2 text-center">
                      <img
                        src="/image/<%= product.productDetail?.image[0]?.filename %>"
                        class="img-fluid rounded-3 " style="max-height: 71px ; " alt="Cotton T-shirt">
                    </div>
                    <div class="col-md-3 col-lg-3 col-xl-3">
                      <h3 class="text-muted"><%= product.productDetail?.name %></h3>
                      <!-- <h6 class="text-black mb-0">Cotton T-shirt</h6> -->
                    </div>
                    <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                      <% if(product.productQuantity == 1) {%>
                      <button class="btn btn-link px-2 disabled "
                        onclick="changeQuantity('<%= product?._id %>','<%= product.productDetail?._id %>',-1)">
                      <% } else { %>
                        <button class="btn btn-link px-2 "
                        onclick="changeQuantity('<%= product?._id %>','<%= product.productDetail?._id %>',-1)">
                        <% } %>
                        <i class="fas fa-minus"></i>
                      </button>
                      <button id="<%= product.productDetail?._id %>" name="quantity" style="background-color:transparent !important; border: none; padding-left:3px;padding-right:8px;"><%= product.productQuantity %></button>
                      

                      <button class="btn btn-link px-2"
                      onclick="changeQuantity('<%= product?._id %>','<%= product.productDetail?._id %>',1)">
                        <i class="fas fa-plus"></i>
                      </button>
                    </div>
                    <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                      <h3 class="m-0"> ₹ <%= product.productPrice %></h3>
                    </div>
                    <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                      <button class="btn btn-outline-none"
                        onclick="removeProduct('<%= product?._id %>','<%= product.productDetail?._id %>')">
                        <i class="fas fa-trash fa-lg"></i>
                    </div>
                  </div>
                  <% }) %>
                  <hr class="my-4">
                  
                  
                </div>
              </div>
              <div class="col-lg-4 bg-grey">
                <div class="p-5">
                  <h2 class="fw-bold mb-5 mt-2 pt-1">Summary</h2>
                  <hr class="my-4">
                  
                  <div class=" justify-content-between mb-4">
                   
                    <h3 class="text-uppercase">items - <%= count %></h3>
                    <div>

                    
                    
                  </div>

                    <!-- <h5>€ 132.00</h5> -->
                  </div>
                  
                

                  <hr class="my-4">

                  <div class="d-flex justify-content-between mb-5">
                    <h2 class="text-uppercase">Total price</h2>
                    <h3> ₹ <%= sum %></h3>
                  </div>

                  <a href="/checkout"><button type="button" class="btn btn-success btn-block btn-lg float-end"
                    data-mdb-ripple-color="dark">Proceed to Checkout</button></a>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<% } %>
