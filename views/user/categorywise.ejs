    <title>Complete Responsive Food / Resturant Website Design Tutorial</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <!-- custom css file link  -->
     
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .dropbtn {
          background-color: rgb(245, 241, 241);
          color: black;
          padding: 16px;
          font-size: 16px;
          border: none;
          cursor: pointer;
        }
        
        .dropdown {
          position: relative;
          display: inline-block;
        }
        
        .dropdown-content {
          display: none;
          position: absolute;
          right: 0;
          background-color: #f1f1f1;
          min-width: 160px;
          box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
          z-index: 1;
        }
        
        .dropdown-content a {
          color: black;
          padding: 12px 16px;
          text-decoration: none;
          display: block;
          font-size:15px;
        }
        
        .dropdown-content a:hover {background-color: #f1f1f1;}
        .dropdown:hover .dropdown-content {display: block;}
        .dropdown:hover .dropbtn {background-color: #eff1ef;}
        a{
            text-decoration: none;
        }
        </style>
</head>
<body>
    


  <%- include('../partials/usernav.ejs') %>


<section>
  <h1 class="title" style="text-align:center;margin-top:30px;color:green;font-family:Georgia, 'Times New Roman', Times, serif;font-size:40px;">Find your favourite taste</h1>
</section>


<!-- popular section starts  -->

<section class="popular" id="popular">

  <div class="heading">
     
  </div>
  <div class="box-container">
    <% data.forEach(function(product){ %>
    <div class="box">
        <!-- <span class="text-danger" id="<%= product._id %>"></span>
        <button  onclick="addToWishlist('<%= product._id %>')"><a href=""  class="fas fa-heart"style="color:darkred;"></a></button> -->
        <div class="image">
            <img src="/image/<%=product.image[0].filename%>" alt="" class="image-fluid rounded">
        </div>
        <div class="content">
            <h3> <%=product.name%></h3>
           
            <div class="price">â‚¹ <%=product.price%></div>
            <a href="/productDetails?id=<%=product._id%>" class="btn">View details</a>
        </div>
    </div>
    <% }) %>
</div>

</section>












