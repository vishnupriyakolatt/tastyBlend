<body class="sb-nav-fixed">

  <%- include('../partials/adminnav.ejs') %>

  <section class="section main-section">

  


    <div class="container">

        <section>
            <!-- Jumbotron -->
            <div class="container col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="row g-0 align-items-center justify-content-center">
                    <div class="col-lg-6 mb-5 mb-lg-0 mt-5 pt-5">
                        <div class="card cascading-right"
                            style="background: hsla(0, 0%, 100%, 0.55); backdrop-filter: blur(30px); ">
                            <div class="card-body p-5 shadow-5 text-center">
                                <h2 class="fw-bold mb-5">Update New Product</h2>
                                <form action="" method="post" enctype="multipart/form-data">

                                    <div class="form-outline mt-3">
                                        <label class="form-label" for="form3Example1">Product Name</label><br>
                                        <input type="text" id="form3Example1" name="name" value="<%=product.name%>" class="form-control" />
                                    </div>
                                    <div class="form-outline mt-3">
                                        <label class="form-label" for="form3Example1">Description</label><br>
                                        <input type="text" id="form3Example1" name="description" value="<%=product.description%>" class="form-control" />
                                    </div>
                                    <div class="form-outline mt-3">
                                        <label class="form-label" for="form3Example1">Category Name</label><br>
                                        <select id="form3Example1" name="category" class="form-control " required="required">
                                            
                                            <option value="" disable selected hidden >--select--</option>
                                            <%category.forEach((item)=>{  %>
                                            <option><%=item.name %></option>
                                            <% }) %>
                                        </select>
                                    </div>

                                    <div class="form-outline mt-3">
                                     
                                      <img src="/image/<%=product?.image[0]?.filename%>"style="margin-left:-205px;" width="90px;" height="90px;"><br/>
                                        <label class="form-label" for="form3Example1" style="margin-left:-205px;">Choose your image</label><br>
                                        <input type="file" name="image" value="<%=product?.image[0]?.originalname%>" class="form-control" multiple/>

                                    </div>
                                    <div class="form-outline mt-3">
                                        <label class="form-label" for="form3Example1">Price</label><br>
                                        <input type="text" id="form3Example1" value="<%=product.price%>" name="price" class="form-control" />
                                    </div>
                                    <div class="form-outline mt-3">
                                        <label class="form-label" for="form3Example1">Quantity</label><br>
                                        <input type="text" id="form3Example1" value="<%=product.quantity%>" name="quantity" class="form-control" />
                                    </div>

                                    <!-- Submit button -->
                                    <div class="form-outline mt-3">
                                        <button type="submit" class="btn btn-primary btn-block mb-4">
                                            Submit
                                        </button>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>



  </section>

