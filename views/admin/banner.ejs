<body class="sb-nav-fixed">
    <%- include('../partials/adminnav.ejs') %>



                <div class="container" style="width:100%">
                    <section>

                        <div class="text-center mt-4">
                            <h1>Category Management</h1>
                        </div>
                        <div class="add d-flex justify-content-end ">
                            <a class="addproduct " href='/admin/addBanner' style="text-decoration:none;">
                                <button type="button" class="btn btn-success d-flex justify-content-end">Add 
                                    Banner</button>
                            </a>
                        </div>
                    </section>
                    <section class="mt-2 ">
                      <table id="example" class="table mt-5 table-hover table-light"style="width: 100%">
                          <thead>
                              <tr>
                                  <th class="text-center">Name</th>
                                  <th class="text-center">Image</th>
                                  <th class="text-center">Description</th>
                                  <th class="text-center">Remove</th>
                              </tr>
                          </thead>
                          <tbody>
                              <% banner.forEach(function(bann){ %>
                                  <tr>
                                      <td class="text-center">
                                          <%=bann.name%>
                                      </td>
                                      <td class="text-center"><img src="/image/<%=bann.image%>" alt="img" width="200px"></td>
                                    
                                        <td class="text-center">
                                            <%=bann.text%>
                                        </td>
                                   
                                      <td colspan="3">
                                        <div class="d-flex flex-column gap-1">
                                            <a href="/admin/deleteBanner/<%= bann._id %>" class="btn btn-danger btn-sm"
                                                tabindex="-1" role="button" aria-disabled="true">Delete</a>
                                        </div>
                                    </td>
                                  </tr>
                                  <% }) %>
                          </tbody>
                      </table>
                  </section>            
                </div>
        
        </main>
                    </div>
                </div>
   <script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>
