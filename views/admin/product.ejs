<body class="sb-nav-fixed">
    
           
    <%- include('../partials/adminnav.ejs') %>
      
  

                <div class="container" style="width:100%;"  >
                    <section>

                        <div class="text-center mt-4">
                            <h1>Product Management</h1>
                        </div>
                        <div class="add d-flex justify-content-end ">
                            <a class="addproduct " href='/admin/addProduct' style="text-decoration:none;">
                                <button type="button" class="btn btn-success d-flex justify-content-end">Add 
                                    Product</button>
                            </a>
                        </div>
                    </section>
                    <section class="mt-2 ">
                        <table id="example" class="table mt-5 table-hover ">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Image</th>
                                    <th width="100px">Description</th>
                                    <th >Category</th>

                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% details.forEach(function(product){ %>
                                    <tr>
                                        <td>
                                            <%=product.name%>
                                        </td>
                                        <td><img src="/image/<%=product?.image[0]?.filename%>" id="img" alt="img" width="auto" style="max-height: 140px;">
                                        </td>
                                        <td>
                                            <%=product.description%>
                                        </td>
                                        <td>
                                            <%=product.category%>
                                        </td>
                                        <td>
                                            <%=product.price%>
                                        </td>
                                        <td>
                                            <%=product.quantity%>
                                        </td>
                                        <td>
                                            

                                            <a class="addproduct " href="/admin/editProduct?id=<%=product._id%>"style="text-decoration: none;">

                                                
                                                <button type="button" class="btn btn-success"
                                                    style="width: 90px; height: auto; text-decoration: none;">Edit</button>
                                                <% if(product.status==true) {%>
                                            </a>


                                            <a class="addproduct " href="/admin/statusProduct?id=<%= product._id%>"
                                                style="text-decoration: none;">
                                                <button type="button" class="btn btn-danger "onclick="confirm ()"
                                                    style="width: 90px; height: auto; text-decoration: none;">Unlist</button>
                                            </a>
                                            <%}else{%>
                                                <a class="addproduct mt-2"
                                                    href="/admin/statusProduct?id=<%= product._id%>"
                                                    style="text-decoration: none">
                                                    <button type="button" class="btn btn-success"onclick="return confirm('Are you sure you want to List ')"
                                                        style="width: 90px; height: auto; text-decoration: none;">List</button>


                                                </a>
                                                <%}%>

                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </section>
                </div>
        
        </main>


        
    </div>
    </div>







   <script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js"></script>

    <script>
